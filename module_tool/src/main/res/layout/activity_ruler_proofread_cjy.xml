<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.example.module_tool.widget.RulerProofreadView
        android:id="@+id/rulerProofread"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>
    <TextView
        android:id="@+id/chooseTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tips2cmLength"
        android:textColor="#FF000000"
        android:textSize="17sp"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineVerticalCentre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>
    <Button
        android:id="@+id/cancel"
        app:layout_constraintTop_toBottomOf="@id/chooseTitle"
        app:layout_constraintEnd_toEndOf="@id/lineVerticalCentre"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="66dp"
        android:layout_width="124dp"
        android:layout_height="40dp"
        android:text="@string/cancelJiaoDui"
        android:textColor="@color/white"
        android:background="@drawable/shape_jiaodui_cancel"/>
    <Button
        android:id="@+id/ok"
        app:layout_constraintTop_toBottomOf="@id/chooseTitle"
        app:layout_constraintLeft_toLeftOf="@id/lineVerticalCentre"
        android:layout_marginTop="114dp"
        android:layout_marginStart="66dp"
        android:layout_width="124dp"
        android:layout_height="40dp"
        android:text="@string/okJiaoDui"
        android:textColor="@color/white"
        android:background="@drawable/shape_jiaodui_ok"/>
</androidx.constraintlayout.widget.ConstraintLayout>