<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="30dp">
    <TextView
        android:id="@+id/title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="当前距离因子:   "
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/current"
        app:layout_constraintLeft_toRightOf="@id/title"
        app:layout_constraintTop_toTopOf="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="34"
        android:textSize="15sp"/>
    <TextView
        app:layout_constraintLeft_toRightOf="@id/current"
        app:layout_constraintTop_toTopOf="@id/current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="默认距离因子：34"
        android:layout_marginStart="20dp"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/content"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="@id/title"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="距离因子与所得距离成正比\n您可根据情况测量结果的误差适度调节距离因子"
        android:textSize="14sp"/>
    <ImageView
        android:id="@+id/less"
        app:layout_constraintTop_toBottomOf="@id/content"
        app:layout_constraintLeft_toLeftOf="@id/content"
        app:layout_constraintRight_toLeftOf="@id/disFactor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@drawable/ic_remove"
        app:layout_constraintHorizontal_chainStyle="packed"/>
    <TextView
        android:id="@+id/disFactor"
        app:layout_constraintLeft_toRightOf="@id/less"
        app:layout_constraintRight_toLeftOf="@id/add"
        app:layout_constraintTop_toTopOf="@id/less"
        app:layout_constraintBottom_toBottomOf="@id/less"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12"
        android:textColor="#000"
        android:textSize="17sp"/>
    <ImageView
        android:id="@+id/add"
        app:layout_constraintTop_toBottomOf="@id/content"
        app:layout_constraintLeft_toRightOf="@id/disFactor"
        app:layout_constraintRight_toRightOf="@id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@drawable/ic_add"/>
    <Button
        android:id="@+id/ok"
        app:layout_constraintLeft_toLeftOf="@id/content"
        app:layout_constraintRight_toRightOf="@id/content"
        app:layout_constraintTop_toBottomOf="@id/add"
        android:background="@drawable/shape_jiaodui_ok"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="保存"
        android:textColor="#fff"
        android:textSize="14sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>