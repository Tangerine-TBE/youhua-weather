<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/horizonbg">


    <com.example.module_tool.widget.DiyToolbar
        android:id="@+id/HorizontalView_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.example.module_tool.widget.HorizontalView
        android:id="@+id/horizontalView"
        android:layout_width="450dp"
        android:layout_height="450dp"
        android:layout_centerInParent="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_above="@id/horizontalView"
        android:gravity="center">

        <TextView
            android:id="@+id/horizontalX"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_20"
            android:text="@string/x" />

        <TextView
            android:id="@+id/horizontalY"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_below="@id/horizontalX"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/sp_20"
            android:text="@string/y" />
    </RelativeLayout>
</RelativeLayout>