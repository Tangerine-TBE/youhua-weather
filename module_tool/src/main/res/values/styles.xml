<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <declare-styleable name="CycleRulerView">
        <attr name="resultTextColor" format="color"/>
        <attr name="bolderColor" format="color"/>
        <attr name="markColor" format="color"/>
        <attr name="markTextColor" format="color"/>
    </declare-styleable>


    <!--Loading Dialog-->
    <style name="LoadingDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@color/transparent</item>
    </style>
    <!--Splash界面配置主题-->
    <!--windowDisablePreview 适配8.0启动activity不崩溃，
    因为当前SDK=27，activity设置了竖屏展示且theme需要透明，
    8.0后只有全屏不透明的activity才能设置方向锁定，所以，主题要透明且要设置竖直方向用这个theme-->


    <!--底部dialog Style-->
    <style name="BottomDialog" parent="@style/Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <!--底部dialog Style-->

    <!--底部dialog Animation-->
    <style name="BottomDialog.Animation" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
    </style>
    <!--底部dialog Animation-->

    <style name="proofreadDesText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_16</item>

    </style>

</resources>