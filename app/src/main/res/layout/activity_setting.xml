<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/SettingPager_bg"
    >

    <com.example.tianqi.ui.custom.DiyToolbar
        android:id="@+id/setToolbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"/>

    <androidx.core.widget.NestedScrollView
        android:layout_below="@id/setToolbar"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/banner_container"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:background="@color/colorTransparent"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:id="@+id/setting_login"
                android:layout_width="match_parent"
                android:layout_height="157dp"
                android:layout_marginTop="6.5dp"
                android:layout_below="@+id/banner_container"
                android:background="@color/white"
                >

                <ImageView
                    android:id="@+id/login_icon"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginTop="29.5dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/app_icon"/>

                <TextView
                    android:id="@+id/login_go"
                    android:layout_width="77dp"
                    android:layout_height="26dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/login_icon"
                    android:layout_marginTop="7.5dp"
                    android:textSize="12sp"
                    android:text="立即登录"
                    android:textColor="@color/colorToolbar"
                    android:background="@drawable/shape_setting_login_bg"
                    android:gravity="center"
                    />

            </RelativeLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/setting_container"
                android:layout_below="@+id/setting_login"
                android:layout_marginTop="4.5dp"
                android:layout_width="match_parent"
                android:overScrollMode="never"
                android:layout_height="wrap_content"/>


            <FrameLayout
                android:layout_marginTop="1dp"
                android:id="@+id/feed_container"
                android:visibility="gone"
                android:layout_below="@id/setting_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>




</RelativeLayout>