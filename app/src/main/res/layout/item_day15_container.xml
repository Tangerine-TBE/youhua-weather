<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="22.5dp"
    android:layout_height="wrap_content">

    <TextView
        android:text="紫外线"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_des_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_des_title"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:text="2.5"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:id="@+id/tv_des_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/bt_aqi"
            android:layout_toRightOf="@+id/tv_des_value"
            android:layout_width="2dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:background="@color/black"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_height="10dp"/>

        <TextView
            android:id="@+id/tv_aqi_hint"
            android:layout_toRightOf="@+id/bt_aqi"
            android:layout_alignBaseline="@+id/tv_des_value"
            android:text="优"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

</RelativeLayout>