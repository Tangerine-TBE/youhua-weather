<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginStart="50dp"
    android:layout_marginEnd="50dp"
    android:background="@drawable/shape_permission_dialog"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/closeDialog"
            android:layout_gravity="end"
            android:src="@drawable/ic_baseline_close_24"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
    </FrameLayout>
    <ImageView
        android:src="@mipmap/ic_request_permission"
        android:layout_width="209dp"
        android:layout_height="110dp"/>
    <TextView
        android:text="开启定位服务"
        android:textColor="#0E0E0E"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="若您不进行授权，我们将无法提供精确定位下的天气服务。"
        android:textColor="#3D3D3D"
        android:textSize="15sp"
        android:layout_marginTop="12dp"
        android:layout_width="210dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/openPermission"
        android:text="开启定位"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        android:gravity="center"
        android:layout_marginTop="19dp"
        android:background="@drawable/shape_open_location"
        android:layout_width="219dp"
        android:layout_height="51dp"/>
    <TextView
        android:id="@+id/notAsk"
        android:text="以后再说"
        android:textColor="#8F8F8F"
        android:textSize="17sp"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_width="219dp"
        android:layout_height="51dp"/>
</LinearLayout>